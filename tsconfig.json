{
  "compilerOptions": {
    "target": "es2016",
    "module": "system",
    "outFile": "./src/app.js",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": false
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
